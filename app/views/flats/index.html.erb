<div class="container d-flex">
  <% @all_flats.each do |flat| %>
    <div class="card mx-3 my-4" style="width: 18rem;">
      <div class="card-body d-flex flex-column justify-content-between">
        <div class="title">
          <h5 class="card-title"><%= flat.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        </div>

        <div class="info row mt-2">
          <div class="col">
            <p><i class="fa-solid fa-euro-sign"></i> <%= flat.number_of_guests %></p>
          </div>
          <div class="col">
            <p><i class="fa-solid fa-user-group"></i> <%= flat.price_per_night %></p>
          </div>
        </div>

        <div class="link">
          <%= link_to "More Info", root_path, class: "text-decoration-none" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
